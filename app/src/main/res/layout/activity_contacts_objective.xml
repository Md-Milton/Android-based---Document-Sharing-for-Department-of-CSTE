<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#16A0E8"
    android:gravity="center"
    tools:context=".ContactsObjective">

    <Button
        android:id="@+id/buttonteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher's Info"
        android:textColor="#C12170"
        android:background="@drawable/white_btn_background"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttoncr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Representative"
        android:textColor="#C12170"
        android:background="@drawable/white_btn_background"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

</LinearLayout>