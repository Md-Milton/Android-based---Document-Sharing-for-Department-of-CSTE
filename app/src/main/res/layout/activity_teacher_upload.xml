<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_upload"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#16A0E8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cste.milton.student_faculty_document_sharing_system.TeacherUpload">

        <Spinner
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/spinner" />
        <Button
            android:layout_width="match_parent"
            android:text="Select a File"
            android:textAllCaps="false"
            android:background="@drawable/white_btn_background"
            android:id="@+id/btn_select"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <TextView
            android:text="Selected file : "
            android:textColor="#FFF"
            android:id="@+id/notification"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <Button
            android:layout_width="match_parent"
            android:text="Upload File"
            android:textAllCaps="false"
            android:background="@drawable/white_btn_background"
            android:id="@+id/btn_upload"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:layout_height="0dp" />



 <TextView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="2"/>


    <TextView
        android:id="@+id/uploading"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="1"
            android:layout_height="0dp"
            />




</LinearLayout>
